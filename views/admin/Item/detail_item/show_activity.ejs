

  <div class="tab-pane fade " id="show_activity" role="tabpanel" aria-labelledby="home-tab">

    <div class="card shadow mb-4 mt-2">
     
      <div class="card-body">
       <div class="row">
           <div class="col-md-5">
            <form action="/admin/item/add/activity" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="">Name</label>
                  <input type="text" name="name"  class="form-control" required>
                
                  <label for="">type</label>
                  <input type="text" name="type"  class="form-control" required>

    
                  <label for="">image</label>
                  <input type="file" name="image"  class="form-control" >
                
                </div>
             
       
                <input type="hidden" value="<%= itemId %>" name="itemId">
              <button type="submit" class="btn btn-primary">submit</button>
           
          </form>

           </div>
           <div class="col-md-7">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>name</th>
                      <th>type</th>
                      <th>image</th>
                      <th>action</th>
                    
                     
                    </tr> 
                  </thead>
                  <tbody>
                    <% for(let i = 0; i < activity.length; i++) {  %> 
                      <tr>
                          <td><%= i + 1 %> </td>
                          <td><%= activity[i].name  %> </td>
                          <td><%= activity[i].type  %> </td>

                          <td><img src="http://localhost:3000/<%= activity[i].imageUrl %>  " width="100" height=70 alt=""></td>
                          <td>
                                <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm btn-update" data-id="<%= activity[i].id %>" data-name="<%= activity[i].name %>" data-type="<%= activity[i].type  %>" ><i class="fas fa-edit"></i></a>                            <form class="d-inline" action="/admin/item/<%= itemId%>/activity/<%= activity[i].id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
        
                              </form>
                             
          
                           
                          </td>
        
                      </tr>
                    <% } %> 
                  </tbody>
            
                </table>
              </div>
           </div>
       </div>
      </div>
    </div>
  </div>
